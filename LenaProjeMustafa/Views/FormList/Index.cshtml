@model List<Entitiess.Models.FormList>

@{
    ViewBag.Title = "Form Ekranı";
}

<h2>Yeni Form Kayıt Ekranı</h2>

<p>
    <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#FormPopup">Yeni Form Kaydet</button>
</p>
<p>
    @using (Html.BeginForm("Search","FormList",FormMethod.Post))
    {
        <form role="form">
            <div class="form-group float-label-control">
                <label for="">Ara</label>
                <input type="text" class="form-control" name="search">
                <div class="form-group float-label-control">
                    <button type="submit" class="btn btn-outline-primary">Ara</button>
                </div>
            </div>
        </form>
    }
</p>
<table class="table">
    <tr>
        <th>
            Form Adı
        </th>
        <th>
            Açıklama
        </th>
        <th>
            Oluşturma Tarihi
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.FormName
        </td>
        <td>
            @item.Description
        </td>
        <td>
            @item.CreatedAt
        </td>
        <td>
            @Html.ActionLink("Listele & Düzenle", "Details", new { id=item.FormId })
        </td>
    </tr>
}

</table>

<div id="FormPopup" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Popup", "FormList", FormMethod.Post))
                {
                    <form role="form">
                        <div class="form-group float-label-control">
                            <label for="">Form İsmi</label>
                            <input type="text" class="form-control" name="formName" required>
                        </div>
                        <div class="form-group float-label-control">
                            <label for="">Açıklama</label>
                            <input type="text" class="form-control" name="formDescription" required>
                        </div>
                        <div class="form-group float-label-control">
                            <label for="">Kullanıcı Adı</label>
                            <input type="text" class="form-control" name="name" required>
                        </div>
                        <div class="form-group float-label-control">
                            <label for="">Kullanıcı Soyadı</label>
                            <input type="text" class="form-control" name="surname" required>
                        </div>
                        <div class="form-group float-label-control">
                            <label for="">Yaş</label>
                            <input type="number" class="form-control" name="age" required>
                        </div>
                        <div class="form-group float-label-control">
                            <button type="submit" class="btn btn-outline-primary">Kaydet</button>
                        </div>
                    </form>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Çıkış</button>
            </div>
        </div>
    </div>
</div>
